<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>StreamTube</title>
    <link rel="stylesheet" href="../style/index.css" />
    <script src="https://kit.fontawesome.com/3f167df4c7.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <h1 id="logo">StreamTube</h1>
    <div class="main">
      <h1>What You Are Looking For?</h1>

      <form action="/search" method="POST">
        <!-- Existing keyword input -->
        <input
          type="text"
          name="query"
          placeholder="Search videos..."
          required
        />
        <button type="submit" class="search_button">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </form>

        <!-- New: Video Type Selection -->
        <div class="type">
          <label for="videoType">Video Type:</label>
          <select name="videoType" id="videoType">
            <option value="any" selected>Any</option>
            <option value="short">Short</option>
            <option value="long">Long</option>
          </select>
        </div>

        
    </div>
  </body>
</html>
